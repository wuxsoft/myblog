<div class="col-xs-offset-3 col-xs-5">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= render 'shared/error_messages', target: @member %>
    <h2 class="form-signin-heading">Log in</h2>
    <div class="form-inputs">
      <%= f.label :email ,class:'sr-only' %>
      <%= f.email_field :email, required: false , autofocus: true,placeholder:true, class:'form-control' %>
      <%= f.label :password,class:'sr-only' %>
      <%= f.password_field :password, required: false , autocomplete: "off",placeholder:true , class:'form-control' %>

      <!-- <%= f.label :remember_me,class:'sr-only' %>
      <%= f.check_box :remember_me, as: :boolean, text: "remember_me" %> -->
      <%= f.input :remember_me, as: :boolean , class:'form-control form-control-multi' if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in",class: "btn btn-lg btn-primary btn-block" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
