<div class="col-xs-offset-3 col-xs-5">
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),html:{class: 'form-signin'}) do |f| %>
  <%= devise_error_messages! %>
  <h2 class="form-signin-heading">Sign In</h2>
  <%= f.label :email, class:'sr-only' %>
  <%= f.input_field :email, required: false, placeholder: true, autofocus: true, class:'form-control' %>
  <%= f.label :password, class:'sr-only' %>
  <%= f.input_field :password, required: false, placeholder: true, class:'form-control form-control-last' %>
  <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class:'btn btn-lg btn-primary btn-block' %>
  </div>
  <%= render "devise/shared/links" %>
<% end %>
</div>
