<!DOCTYPE html>
<html lang="zh-cn">
  <head>
    <title>test</title>
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>
    <%= stylesheet_link_tag 'app', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'app', 'data-turbolinks-track' => 'reload' %>
  </head>
  <body data-controller="<%= controller_name %>" class="page-<%= controller_name %>">
    <nav class="navbar navbar-inverse navbar-static-top">
      <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand" href="#">MyBlog</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li class="active"><%=link_to('Home',root_path)%></li>
            <li><a href="#about">About</a></li>
            <li><a href="#contact">Contact</a></li>
          </ul>
          <div class="navbar-right">
            <ul class="nav navbar-nav">
              <% if current_member %>
                <li>
                <%= link_to('Sign out', destroy_member_session_path, :method => :delete) %>
                </li>
                <li>
                <%= link_to('Account', edit_registration_path(:member)) %>
                </li>
              <% else %>
                <li>
                <%= link_to('Sign up', new_registration_path(:member)) %>
                </li>
                <li>
                <%= link_to('Sign in', new_session_path(:member)) %>
                </li>
              <% end %>
            </ul>
          </div>
          <div class="clearfix">
          </div>
        </div><!--/.nav-collapse -->

      </div>
    </nav>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
